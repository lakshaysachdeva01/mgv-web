<%- include('header'), {seoDetails} %>

<style>
    .fullscreen-message-page {
        position: relative;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        background: linear-gradient(135deg, #333333 0%, #171717 50%, #2f2f2f 100%);
        display: flex;
        justify-content: center;
        align-items: center;
       
    }
    
    .message-content {
        text-align: center;
        padding: 40px;
        max-width: 700px;
        animation: fadeInUp 0.6s ease-out;
    }
    
    .message-content h1 {
        color: #ffffff;
        font-size: 80px;
        font-weight: 700;
        margin-bottom: 30px;
        text-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
    }
    
    .message-content p {
        color: #e0e0e0;
        font-size: 18px;
        line-height: 1.6;
        margin-bottom: 40px;
    }
    
    .message-content .btn-home {
        display: inline-block;
        padding: 15px 40px;
        background: #cb1125;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        font-weight: 600;
        font-size: 16px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(252, 82, 32, 0.3);
    }
    
    .message-content .btn-home:hover {
        background: #e04718;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(252, 82, 32, 0.4);
    }
    
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    @media (max-width: 768px) {
        .message-content h1 {
            font-size: 50px;
        }
        
        .message-content p {
            font-size: 16px;
        }
    }
</style>

<div class="fullscreen-message-page">
    <div class="message-content">
        <h1>Thank You!</h1>
        <p id="thank-you-message">Thank you for reaching out to us. We've received your message and our team will get back to you shortly.</p>
        <a href="/" class="btn-home">Back to Home</a>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const message = sessionStorage.getItem("thankYouMessage");
        
        if (message) {
            // Display the message in an element with ID 'thank-you-message'
            document.getElementById("thank-you-message").textContent = message;
    
            // Optionally clear the message after it's shown (to avoid persisting after page reload)
            sessionStorage.removeItem("thankYouMessage");
        }
    });
    
</script>
<%- include('footer') %>