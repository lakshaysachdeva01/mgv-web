        display: flex;
        flex-direction: column;
        gap: 5px;
    }
    
    .faq-contact-flip-container .phone-item.active {
        opacity: 1;
        transform: translateY(0);
        position: relative;
    }
    
    .faq-contact-flip-container .phone-item.exiting {
        opacity: 0;
        transform: translateY(-20px);
    }
    
    .faq-contact-flip-container .phone-item a {
        pointer-events: auto;
        cursor: pointer;
        text-decoration: none;
    }
    
    .faq-contact-flip-container .phone-item a:hover {
        text-decoration: underline;
    }
</style>

<script>
    (function() {
        const faqPhoneItems = document.querySelectorAll('.faq-contact-flip-container .phone-item');
        
        if (faqPhoneItems.length < 2) {
            return; // Need at least 2 items to flip
        }
        
        let currentFaqIndex = 0;
        
        function flipFaqContact() {
            const currentItem = faqPhoneItems[currentFaqIndex];
            const nextIndex = (currentFaqIndex + 1) % faqPhoneItems.length;
            const nextItem = faqPhoneItems[nextIndex];
            
            // Exit current
            currentItem.classList.add('exiting');
            
            setTimeout(() => {
                currentItem.classList.remove('active', 'exiting');
                
                // Enter next
                nextItem.classList.add('active');
                currentFaqIndex = nextIndex;
            }, 500);
        }
        
        // Flip every 3 seconds
        setInterval(flipFaqContact, 3000);
    })();
</script>