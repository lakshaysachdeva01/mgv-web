<!-- Popup Overlay -->
<div class="popup-overlay" id="popup-overlay">
    <div class="popup-banner">
      <button class="close-button" id="popup-close-btn"><i style="font-size: 14px;" class="fa-solid fa-xmark"></i></button>
  
        <!-- Desktop Swiper -->
        <div class="popup-desktop-banner">
            <div class="swiper popup-desktop-swiper" id="popup-desktop-swiper">
                <div class="swiper-wrapper">
                    <% popupbanners.forEach((slide, index) => { %>
                        <div class="swiper-slide popup-slide">
                            <img src="<%= process.env.S3_BASE_URL + slide.bannerImage.webView %>" alt="<%= slide.title %>"/>
                        </div>
                    <% }) %>
                </div>
                
            </div>
        </div>
  
        <!-- Mobile Swiper -->
        <div class="popup-mobile-banner">
            <div class="swiper popup-mobile-swiper" id="popup-mobile-swiper">
                <div class="swiper-wrapper">
                    <% popupbanners.forEach((slide, index) => { %>
                        <div class="swiper-slide popup-slide">
                            <img src="<%= process.env.S3_BASE_URL + slide.bannerImage.mobileView %>" alt="<%= slide.title %>"/>
                        </div>
                    <% }) %>
                </div>
                <div class="swiper-pagination popup-pagination-mobile"></div>
               
            </div>
             
        </div>
        
    </div>
  </div>
  
  <!-- Styles -->
  <style>
    .popup-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        background: rgba(0, 0, 0, 0.8);
        display: none;
        justify-content: center;
        align-items: center;
        z-index: 999999;
        opacity: 0;
        transition: opacity 0.3s ease-in-out;
    }
  
    .popup-banner {
        position: relative;
        width: auto;
        max-width: 90%;
        height: 600px;
        border-radius: 10px;
    }
  
    .close-button{
  background-color: transparent;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: 700;
  border:none;
  color: white;
  width: 100%;
  
    }
  
    #popup-close-btn {
        position: absolute;
        top: -15px;
        right: -15px;
        background: rgb(36, 36, 36);
        border: 1px solid white;
        color: white;
  
        height: 35px;
        width: 35px;
        font-size: 20px;
        cursor: pointer;
        padding: 0;
        border-radius: 50%;
        z-index: 1001;
    }
  
    .popup-slide {
        display: flex;
        justify-content: center;
        align-items: center;
    }
  
    .popup-slide img {
        height: 600px;
        width: auto;
        max-width: 100%;
        object-fit: contain;
        display: block;
    }
  
    .swiper {
        width: 100%;
        height: 100%;
    }
  
    .popup-desktop-banner {
        display: block;
    }
  
    .popup-mobile-banner {
        display: none;
    }
  
    .swiper-pagination {
        bottom: 10px !important;
    }
  
    @media (max-width: 768px) {
        .popup-desktop-banner {
            display: none;
        }
        
        #popup-close-btn {
    top: -15px;
    right: 5px;
  }
  
        .popup-mobile-banner {
            display: block;
        }
        .popup-banner {
            max-width: 95%;
        }
        
        .popup-slide img {
            height: 100%;
            max-height: 500px;
            width: 100%;
            max-width: 90%;
            justify-content: center;
        }
    }
  </style>
  
  
  
  <!-- Scripts -->
  <script>
  document.addEventListener("DOMContentLoaded", function () {
    // Verify Swiper is loaded
    if (typeof Swiper === 'undefined') {
        console.error('Swiper library not loaded! Check CDN or file path.');
        return;
    }
  
    const popupOverlay = document.getElementById("popup-overlay");
    const popupCloseBtn = document.getElementById("popup-close-btn");
  
    if (!popupOverlay || !popupCloseBtn) {
        return;
    }
  
    // Pass popupbanners length from server to client
    const popupBannersCount = <%= popupbanners.length %>;
  
    // Initialize Swiper instances
    let desktopSwiper, mobileSwiper;
    let swipersInitialized = false;
    
    function initSwipers() {
        if (swipersInitialized) {
            return;
        }
        
        try {
            const desktopConfig = {
                slidesPerView: 1,
                loop: popupBannersCount > 1,
                autoplay: {
                    delay: 3000,
                    disableOnInteraction: false,
                }
            };
            
            const mobileConfig = {
                slidesPerView: 1,
                loop: popupBannersCount > 1,
                autoplay: {
                    delay: 3000,
                    disableOnInteraction: false,
                },
                pagination: {
                    el: '.popup-pagination-mobile',
                    clickable: true,
                }
            };
            
            desktopSwiper = new Swiper('#popup-desktop-swiper', desktopConfig);
            mobileSwiper = new Swiper('#popup-mobile-swiper', mobileConfig);
            
            swipersInitialized = true;
        } catch (error) {
            console.error('Error initializing Swiper:', error);
        }
    }
  
    // Show popup
    function showPopup() {
        if (!popupOverlay) return;
        
        // Disable body scroll without breaking layout
        const scrollY = window.scrollY;
        document.body.style.position = 'fixed';
        document.body.style.top = `-${scrollY}px`;
        document.body.style.width = '100%';
        document.body.style.overflow = 'hidden';
        
        popupOverlay.style.display = "flex";
        requestAnimationFrame(() => {
            popupOverlay.style.opacity = "1";
            if (!swipersInitialized) {
                initSwipers();
            } else {
                if (desktopSwiper) desktopSwiper.update();
                if (mobileSwiper) mobileSwiper.update();
            }
        });
    }
  
    // Close popup
    function closePopup() {
        if (!popupOverlay) return;
        
        popupOverlay.style.opacity = "0";
        setTimeout(() => {
            popupOverlay.style.display = "none";
            
            // Restore body scroll properly
            const scrollY = document.body.style.top;
            document.body.style.position = '';
            document.body.style.top = '';
            document.body.style.width = '';
            document.body.style.overflow = '';
            
            if (scrollY) {
                window.scrollTo(0, parseInt(scrollY || '0') * -1);
            }
            
            if (desktopSwiper && desktopSwiper.autoplay) {
                desktopSwiper.autoplay.stop();
            }
            if (mobileSwiper && mobileSwiper.autoplay) {
                mobileSwiper.autoplay.stop();
            }
            
            sessionStorage.setItem("popupClosed", "true");
        }, 300);
    }
  
    // Check if popup should show
    if (!sessionStorage.getItem("popupClosed") && popupBannersCount > 0) {
        setTimeout(showPopup, 500);
    }
  
    // Event listeners
    popupCloseBtn.addEventListener("click", closePopup);
    popupOverlay.addEventListener("click", function (e) {
        if (e.target === popupOverlay) {
            closePopup();
        }
    });
  });
  </script>
