<%- include('header'), {seoDetails} %>

<style>
    .fullscreen-error-page {
        position: relative;
        top: 0;
        left: 0;
        width: 100%;
        height: 120vh;
        margin-top: -120px;
        background: linear-gradient(135deg, #0b0733 0%, #1d1e2a 50%, #1a1c2f 100%);
        display: flex;
        justify-content: center;
        align-items: center;
   
    }
    
    .error-content {
        text-align: center;
        padding: 40px;
        padding-top: 150px;
        max-width: 700px;
        animation: fadeInUp 0.6s ease-out;
    }
    
    .error-content h1 {
        color: #FC5220;
        font-size: 120px;
        font-weight: 700;
        margin-bottom: 20px;
        text-shadow: 0 4px 15px rgba(252, 82, 32, 0.3);
        line-height: 1;
    }
    
    .error-content h2 {
        color: #ffffff;
        font-size: 32px;
        font-weight: 600;
        margin-bottom: 20px;
    }
    
    .error-content p {
        color: #e0e0e0;
        font-size: 18px;
        line-height: 1.6;
        margin-bottom: 40px;
    }
    
    .error-content .btn-home {
        display: inline-block;
        padding: 15px 40px;
        background: #FC5220;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        font-weight: 600;
        font-size: 16px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(252, 82, 32, 0.3);
    }
    
    .error-content .btn-home:hover {
        background: #e04718;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(252, 82, 32, 0.4);
    }
    
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    @media (max-width: 768px) {
        .error-content h1 {
            font-size: 80px;
        }
        
        .error-content h2 {
            font-size: 24px;
        }
        
        .error-content p {
            font-size: 16px;
        }
    }
</style>

<div class="fullscreen-error-page">
    <div class="error-content">
        <h1>404</h1>
        <h2>Page Not Found</h2>
        <p>Unfortunately, the page you're looking for doesn't exist. It might have been moved or deleted.</p>
        <a href="/" class="btn-home">Back to Home</a>
    </div>
</div>

<%- include('footer') %>